{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./build",
    "paths": {
      "@core/*": ["../shared-core/src/*"],
      "@server/*": ["../shared-server/src/*"],
      "#app/*": ["./src/*"],
    }
  },
  "include": [
    "src", 
    "../shared-core/build", 
    "../shared-server/build"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    { "path": "../shared-core" },
    { "path": "../shared-server" }
  ]
}