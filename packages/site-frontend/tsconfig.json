{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["vite/client"],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./build",
    "noEmit": true,
    "paths": {
      "@core/*": ["../shared-core/src/*"],
      "@client/*": ["../shared-client/src/*"],
      "#app/*": ["./src/*"],
    }
  },
  "include": [
    "src", 
    "../shared-core/build", 
    "../shared-client/build"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    { "path": "../shared-core" },
    { "path": "../shared-client" }
  ]
}